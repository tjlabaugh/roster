<% include ./partials/header %>
<div class="container">
	<div class="page-header">
		<h1>East City Hitters <small>New Player</small></h1>
	</div>
	<form action="/roster/<%= player.id %>?_method=PUT" method="POST">
		<div class="form-group">
			<label for="name">Name</label>
			<input type="text" class="form-control" id="name" name="player[name]" value="<%= player.name %>">
		</div>
		<div class="form-group">
			<label for="age">Age</label>
			<input type="text" class="form-control" id="age" name="player[age]" value="<%= player.age %>">
		</div>
		<div class="form-group">
			<label for="hometown">Hometown</label>
			<input type="text" class="form-control" id="hometown" name="player[hometown]" value="<%= player.hometown %>">
		</div>
		<div class="form-group">
			<label for="image">Image</label>
			<input type="text" class="form-control" id="image" name="player[image]" value="<%= player.image %>">
		</div>
		<div class="form-group">
			<label for="position">Position</label>
			<input type="text" class="form-control" id="position" name="player[position]" value="<%= player.position %>">
		</div>
		<div class="form-group">
			<label for="bats">Bats</label>
			<input type="text" class="form-control" id="bats" name="player[bats]" value="<%= player.bats %>">
		</div>
		<div class="form-group">
			<label for="throws">Throws</label>
			<input type="text" class="form-control" id="throws" name="player[throws]" value="<%= player.throws %>">
		</div>
		<div class="form-group">
			<label for="avg">Batting Average</label>
			<input type="text" class="form-control" id="avg" name="player[avg]" value="<%= player.avg %>">
		</div>
		<div class="form-group">
			<label for="hr">Home Runs</label>
			<input type="text" class="form-control" id="hr" name="player[hr]" value="<%= player.hr %>">
		</div>
		<div class="form-group">
			<label for="doubles">Doubles</label>
			<input type="text" class="form-control" id="doubles" name="player[doubles]" value="<%= player.doubles %>">
		</div>
		<div class="form-group">
			<label for="triples">Triples</label>
			<input type="text" class="form-control" id="triples" name="player[triples]" value="<%= player.triples %>">
		</div>
		<input type="submit" value="Update Player" class="btn btn-primary">
		<a href="/roster" class="btn btn-danger">Cancel</a>
	</form>
</div>


<% include ./partials/footer %>